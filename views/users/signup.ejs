<% layout('/layout/boilerplate') -%>
    <div class="row mt-3">
        <h2 class="col-6 offset-3">SignUp on Wanderlust</h2>
        <div class="col-6 offset-3 mt-3">
            <form method="post" action="/signup" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" 
                        type="text" class="form-control" 
                        id="username" required>
                    <div class="invalid-feedback">Please enter a username</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" 
                        type="email" class="form-control" 
                        id="email" required>
                    <div class="invalid-feedback">Please enter a email</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" 
                        type="password" class="form-control" 
                        id="password" required>
                    <div class="invalid-feedback">Please enter a strong password</div>
                </div>

                <button class="btn btn-outline-dark mt-3">SignUp</button>

            </form>

        </div>
    </div>