<% layout('/layout/boilerplate') -%>
    <div class="row mt-3">
        <h2 class="col-6 offset-3">Login</h2>
        <div class="col-6 offset-3 mt-3">
            <form method="post" action="/login" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" 
                        type="text" class="form-control" 
                        id="username" required>
                    <div class="invalid-feedback">Please enter a regiter username</div>
                </div>

                
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" 
                        type="password" class="form-control" 
                        id="password" required>
                    <div class="invalid-feedback">Please enter a register password</div>
                </div>

                <button class="btn btn-outline-dark mt-3">Login</button>

            </form>

        </div>
    </div>