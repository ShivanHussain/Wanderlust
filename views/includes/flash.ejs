<% if( success_messages && success_messages.length ){ %>
<div class="alert alert-success alert-dismissible fade show col-6 offset-3" 
role="alert">
    <%= success_messages %>
    <!--<h1>Flash message for success</h1>-->
    <button type="button" 
    class="btn-close" 
    data-bs-dismiss="alert" 
    aria-label="Close"></button>

</div>
<% } %>

<% if( error_messages && error_messages.length ){ %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" 
    role="alert">
        <%= error_messages %>
        <!--<h1>Flash message for success</h1>-->
        <button type="button" 
        class="btn-close" 
        data-bs-dismiss="alert" 
        aria-label="Close"></button>
        
    </div>
    <% } %>